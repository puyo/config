#!/bin/sh

LASTPWDFILE="${HOME}/.lastpwd"

function savepwd() {
  echo $PWD > $LASTPWDFILE
}
function lastpwd() {
  if [ ! -f $LASTPWDFILE ]; then
    echo $HOME
    return
  fi
  lastpwd=`cat ${LASTPWDFILE}`
  if [ ! -d $lastpwd ]; then
    echo $HOME
    return
  fi
  echo $lastpwd
}
PS1="${PS1}\$(savepwd)"
cd `lastpwd`
